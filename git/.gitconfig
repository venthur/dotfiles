	email = bastian.venthur@flix.com

[alias]
        graph = log --graph --oneline --all --simplify-by-decoration
[diff]
	tool = vimdiff
	algorithm = histogram
	colorMoved = plain
	renames = true
[difftool]
	prompt = false
[merge]
	tool = vimdiff
	conflictStyle = zdiff3
[mergetool]
	prompt = false
[pull]
	rebase = false
[branch]
	sort = -committerdate
